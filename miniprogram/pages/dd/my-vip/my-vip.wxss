/* pages/dd/my-vip/my-vip.wxss */
.all-vip{
  background-color: rgb(250, 248, 248);
  font-family: yahei;
  color:#666;
  /* padding:0 20rpx; */
}


.vip-background{
  background-color: #FF3030;
  width:100%;
  height:250rpx;
  text-align: center;
  font-family: yahei;
  color: #fff;
}

.vip-background>view{
  margin:15rpx 0;
}

.vip-background image{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  border:1rpx solid rgb(219, 48, 48);
}

.my-vip{
  background-color: #fff;
}

.my-vip>view:first-child{
  padding:30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(241, 239, 239);
}

.my-vip>view:first-child>view:last-child{
  color:rgb(219, 213, 213);
}
.my-vip>view:last-child{
  padding:30rpx;
  color:rgb(36, 35, 35);
  font-size: 28rpx;
}

.power{
  margin-top:30rpx;
  background-color: #fff;
}

.power>view:first-child{
  display:flex;
  padding:30rpx;
  justify-content: space-between;
  border-bottom:1rpx solid rgb(241, 239, 239);
}

.power>view>view:last-child{
  color:rgb(219, 213, 213);
}

.my-power{
  display: flex;
  text-align: center;
  font-size:26rpx;
  padding:10rpx 30rpx;
}

.my-power>view{
  margin:20rpx;
}

.my-power image{
  /* border:1px solid #FF3030; */
  width:70rpx;
  height:70rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.task{
  background-color: #fff;
  margin-top:30rpx;
  font-size: 32rpx;
  /* padding:30rpx; */

}

.task>view:first-child{
  padding:30rpx;
  border-bottom: 1rpx solid rgb(241, 239, 239);
}

.set,.set-end{
  display: flex;
  justify-content: space-between;
  padding:30rpx;
  align-items: center;
  /* margin-top:30rpx; */
  border-bottom:1rpx solid rgb(241, 239, 239);
}

.set>view:first-child,.set-end>view:first-child{
  font-size: 30rpx;
  color:#656;
  align-items: center;
}

.set>view:last-child{
  border:1rpx solid #FF3030;
  color:#FF3030;
  padding:7rpx 10rpx;
  border-radius: 5rpx;
}

.set-end>view:last-child{
  border:1rpx solid #666;
  color:#666;
  padding:5rpx 10rpx;
  border-radius: 6rpx;

}

.set>view>view:last-child,.set-end>view>view:last-child{
  color:orange;
}