.text-class{
  display:flex;
  justify-content: space-between;
  text-align: center;
  align-items:baseline; 
}
.text-class>view:first-child{
  font-weight: 900;
  font-size: 40rpx;
  color:rgb(22, 22, 22);
}
.text-class>view:last-child{
  font-size: 30rpx;
  color: #999;
}

.inside-text>view:nth-child(2){
  font-size: 30rpx;
  color: #666;
}
.should-play{
  display: flex;
  justify-content: space-between;
  align-items:baseline; 
}
.should-play>view>text:first-child{
  font-weight: 900;
  color:orangered;
  font-size: 38rpx;
}
.should-play>view>text:nth-child(2),.should-play>view:last-child{
  color:#999;
  font-size: 30rpx; 
}
.should-play>view>text:last-child{
   text-decoration: line-through;
   color:#999;
   font-size: 30rpx;
}






