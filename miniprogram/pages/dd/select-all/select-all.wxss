/* pages/dd/select-all/select-all.wxss */

.select-all{
  width:100%;
  height:120rpx;
  background-color: #fff;
  display:flex;
  justify-content: space-around;
  /* padding:0 20rpx; */
  text-align: center;
}

.select-all>view{
  /* height:120rpx; */
  border-bottom: 10rpx solid rgba(137, 207, 6, 0);
  align-items:center; 
  margin:20rpx 0 0;
  padding:0 40rpx;
}

.all{
  font-size:16px;
  font-family: yahei;
  color:rgb(65, 62, 62);
  align-items:center;
}
.select-all>view:hover{
  color:orange;
  border-bottom: 10rpx solid orange;
  border-bottom-left-radius: 5%;
  border-bottom-right-radius: 5%;

}

.evaluate{
  font-size:14px;
  font-family: yahei;
  color:rgb(65, 62, 62);
  
}

/* 中间图片 */
.assess{
  width:100%;
  text-align: center;
  padding:80rpx 0;
}

.assess>view+view{
  margin-top:30rpx;
  color:#2c2c2c;
}

.center image{
  margin:0 auto;
  width:300rpx;
  height:300rpx;
  display:block;
}

/* 猜你喜欢 */
.guess{
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding:30rpx;
  font-family: yahei;
}
.guess>view:first-child{
  color: #666;
  font-weight: 500;
}
.outside{
  width:100%;
  margin-top:20rpx;
}
.inside{
  width:100%;
  height:230rpx;
  display:flex;
  margin:0 auto;
  font-family: yahei ;
  border-bottom:1px solid #ccc;
}

.inside-img image{
  
  width:200rpx;
  height:200rpx;
  border-radius: 20rpx;
  display:block;
  margin-right:20rpx;
}

